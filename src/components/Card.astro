---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<a
  href={href}
  class="flex flex-col gap-2 rounded-lg bg-gradient-to-br from-blue-300 to-emerald-200 p-1 shadow-sm transition-all hover:shadow-md"
>
  <div class="h-full rounded-lg bg-white p-4">
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </div>
</a>
