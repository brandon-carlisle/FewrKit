---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="FewrKit is a list of useful resources for frontend web developers."
    />
    <meta
      name="keywords"
      content="frontend, web development, resources, HTML, CSS, JavaScript"
    />
    <meta name="author" content="Brandon Carlisle" />
    <meta
      property="og:title"
      content="FewrKit - Frontend Web Developer Resources"
    />
    <meta
      property="og:description"
      content="FewrKit is a list of useful resources for frontend web developers."
    />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50">
    <slot />
  </body>
</html>
